{
  "compilerOptions": {
    "baseUrl": ".",
    "paths": {
      "@/*": ["./*"],
      "@/components/*": ["./app/components/*"],
      "@/features/*": ["./app/components/features/*"],
      "@/layout/*": ["./app/components/layout/*"],
      "@/ui/*": ["./app/components/ui/*"],
      "@/consts/*": ["app/lib/consts/*"],
      "@/hooks/*": ["app/hooks/*"],
      "@/types/*": ["app/types/*"],
      "@/services/*": ["app/services/*"],
      "@/assets/*": ["app/assets/*"],
      "@/lib/*": ["app/lib/*"],
      "@/api/*": ["app/api/*"]
    },
    "target": "ES2021",
    "lib": ["dom", "dom.iterable", "esnext"],
    "allowJs": true,
    "allowImportingTsExtensions": true,
    "skipLibCheck": true,
    "strict": true,
    "noImplicitAny": true,
    "noEmit": true,
    "esModuleInterop": true,
    "module": "esnext",
    "moduleResolution": "bundler",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "incremental": true,
    "plugins": [
      {
        "name": "next"
      }
    ]
  },
  "include": ["**/*.ts", "**/*.tsx", "app", ".next/types/**/*.ts"],
  "exclude": ["node_modules", "**/*.jsx"]
}
