{
  "compilerOptions": {
    "baseUrl": ".",
    "paths": {
      "@/*": ["./*"],
      "@/components/*": ["./app/components/*"],
      "@/features/*": ["./app/components/features/*"],
      "@/layout/*": ["./app/components/layout/*"],
      "@/ui/*": ["./app/components/ui/*"],
      "@/consts/*": ["./app/components/consts/*"],
      "@/hooks/*": ["app/hooks/*"],
      "@/types/*": ["app/types/*"],
      "@/services/*": ["app/services/*"],
      "@/assets/*": ["app/assets/*"],
      "@/lib/*": ["app/lib/*"]
    },
    "target": "ES2017",
    "lib": ["dom", "dom.iterable", "esnext"],
    "allowJs": true,
    "allowImportingTsExtensions": true,
    "skipLibCheck": true,
    "strict": true,
    "noEmit": true,
    "esModuleInterop": true,
    "module": "esnext",
    "moduleResolution": "bundler",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "incremental": true,
    "plugins": [
      {
        "name": "next"
      }
    ]
  },
  "include": [
    "**/*.ts",
    "**/*.tsx",
    ".next/types/**/*.ts",
    "next-env.d.ts",
    "out/types/**/*.ts",
    "app/lib/firebase.js"
  ],
  "exclude": ["node_modules"]
}
